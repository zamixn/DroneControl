<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/label_plate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Įveskite automobilio numerį"
        android:textAlignment="center"
        android:paddingTop="50dp"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/license_plate_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="automobilio numeris"
        android:layout_below="@+id/label_plate"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="ABC123"/>



    <TextView
        android:id="@+id/label_mobile_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Įveskite automobilio numerį"
        android:textAlignment="center"
        android:layout_below="@+id/license_plate_number"
        android:layout_marginTop="100dp"/>
    <EditText
        android:id="@+id/mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Įveskite telefono numerį"
        android:layout_below="@+id/label_mobile_num"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="86471981666"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitInfoButton"
        android:layout_below="@+id/mobile_number"
        android:layout_marginTop="100dp"
        android:layout_alignParentRight="true"
        android:text="Pateikti" />

</RelativeLayout>